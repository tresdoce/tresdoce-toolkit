{
  "extends": "@tresdoce-toolkit/config",
  "compilerOptions": {
    "rootDir": "./src",
    "types": ["node", "tresdoce-toolkit"],
    "skipLibCheck": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "__test__",
    "**/__test__/**/*",
    "**/*spec.ts",
    "**/*it.ts",
    "**/*test.ts",
    "**/*e2e.ts",
    "**/*e2e-spec.ts",
    "coverage"
  ]
}
