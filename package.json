{
  "name": "@tresdoce-toolkit/root",
  "description": "Tresdoce Toolkit",
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tresdoce/tresdoce-toolkit.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tresdoce/tresdoce-toolkit/issues"
  },
  "homepage": "https://github.com/tresdoce/tresdoce-toolkit#readme",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "lint-staged",
    "prepublishOnly": "yarn build",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,md,json}\"",
    "version-packages": "lerna version --conventional-commits --force-git-tag --create-release github --yes",
    "publish:pkgs": "lerna publish from-git --no-verify-access --yes",
    "postinstall": "husky install && lerna bootstrap",
    "bs": "lerna bootstrap",
    "plop": "plop"
  },
  "workspaces": [
    "packages/*"
  ],
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx,md,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "shx": "^0.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-extended": "^2.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.2.2",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "turbo": "latest",
    "typescript": "^4.5.5"
  }
}
